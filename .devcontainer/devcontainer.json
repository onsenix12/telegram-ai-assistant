{
    "name": "Telegram AI Assistant",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "github.copilot"
            ],
            "settings": {
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    }
}