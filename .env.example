# Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ANTHROPIC_API_KEY=your_anthropic_api_key

# Docker Configuration
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKER_IMAGE=your_dockerhub_username/telegram-ai-assistant:latest

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=telegram_bot

# Authentication Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
AUTH_SECRET_KEY=your_auth_secret_key

# External domain for auth service (replace with your domain or IP)
EXTERNAL_DOMAIN=your-server-ip:5050
# SERVER_NAME for Flask app (usually same as EXTERNAL_DOMAIN)
SERVER_NAME=your-server-ip:5050

# Authentication settings
AUTH_REQUIRED=true
DEV_MODE=false